    }
  }
}

// æ£€æŸ¥ PR æ˜¯å¦å·²åˆå¹¶
def isPRMerged() {
  try {
    // æ£€æŸ¥å½“å‰æäº¤æ˜¯å¦åœ¨ç›®æ ‡åˆ†æ”¯ä¸Š
    def result = sh(
      script: "git log --oneline -n 10 --grep='Merge pull request #${env.CHANGE_ID}' || echo 'not_merged'",
      returnStdout: true
    ).trim()
    
    return !result.contains('not_merged')
  } catch (Exception e) {
    echo "âš ï¸ æ£€æŸ¥ PR åˆå¹¶çŠ¶æ€å¤±è´¥: ${e.getMessage()}"
    return false
  }
}

